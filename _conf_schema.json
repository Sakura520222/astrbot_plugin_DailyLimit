{
    "redis": {
        "description": "Redis配置",
        "type": "object",
        "items": {
            "host": {
                "description": "主机地址",
                "type": "string",
                "default": "localhost"
            },
            "port": {
                "description": "端口",
                "type": "int",
                "default": 6379
            },
            "db": {
                "description": "数据库",
                "type": "int",
                "default": 0
            },
            "password": {
                "description": "密码",
                "type": "string",
                "default": ""
            }
        }
    },
    "limits": {
        "description": "限制配置",
        "type": "object",
        "items": {
            "default_daily_limit": {
                "description": "默认每日限制次数",
                "type": "int",
                "default": 20
            },
            "exempt_users": {
                "description": "豁免用户ID列表",
                "type": "list",
                "default": []
            },
            "group_limits": {
                "description": "特定群组限制",
                "type": "list",
                "default": [],
                "hint": "格式为：{\"group_id\": 群组ID, \"limit\": 每日限制次数}(使用指令/sid查看ID)",
                "items": {
                    "type": "object",
                    "items": {
                        "group_id": {
                            "description": "群组ID",
                            "type": "string"
                        },
                        "limit": {
                            "description": "每日限制次数",
                            "type": "int"
                        }
                    }
                }
            },
            "group_mode_settings": {
                "description": "群组模式配置",
                "type": "list",
                "default": [],
                "hint": "格式为：{\"group_id\": 群组ID, \"mode\": \"shared\"或\"individual\"}",
                "items": {
                    "type": "object",
                    "items": {
                        "group_id": {
                            "description": "群组ID",
                            "type": "string"
                        },
                        "mode": {
                            "description": "群组模式：shared(共享)或individual(独立)",
                            "type": "string",
                            "enum": ["shared", "individual"]
                        }
                    }
                }
            },
            "user_limits": {
                "description": "特定用户限制",
                "type": "list",
                "default": [],
                "hint": "格式为：{\"user_id\": 用户ID, \"limit\": 每日限制次数}",
                "items": {
                    "type": "object",
                    "items": {
                        "user_id": {
                            "description": "用户ID",
                            "type": "string"
                        },
                        "limit": {
                            "description": "每日限制次数",
                            "type": "int"
                        }
                    }
                }
            },
            "time_period_limits": {
                "description": "时间段限制配置",
                "type": "list",
                "default": [],
                "hint": "格式为：{\"start_time\": \"HH:MM\", \"end_time\": \"HH:MM\", \"limit\": 限制次数, \"enabled\": true/false}",
                "items": {
                    "type": "object",
                    "items": {
                        "start_time": {
                            "description": "开始时间（HH:MM格式）",
                            "type": "string"
                        },
                        "end_time": {
                            "description": "结束时间（HH:MM格式）",
                            "type": "string"
                        },
                        "limit": {
                            "description": "该时间段内的限制次数",
                            "type": "int"
                        },
                        "enabled": {
                            "description": "是否启用该时间段限制",
                            "type": "bool",
                            "default": false
                        }
                    }
                }
            },
            "skip_patterns": {
                "description": "跳过处理的模式配置",
                "type": "list",
                "default": ["@所有人", "#"],
                "hint": "消息以这些模式开头时，将跳过处理（不消耗次数）",
                "items": {
                    "type": "string"
                }
            }
        }
    }
}